{
  "name": "todolist",
  "version": "0.4.2",
  "description": "An exciting exercise from Siteminder",
  "author": "Kevin Lang<kevin.lang@siteminder.com>",
  "repository": "https://github.com/kevin-liang2552/todolist",
  "license": "MIT",
  "main": "./dist/tsc/main.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/ --ext .ts",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "build": "tsc -p tsconfig.json",
    "build-all": "npm run clean && npm run build && npm run esbuild-node",
    "esbuild-node": "esbuild src/index.ts --bundle --external:pg-hstore --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:dev": "esbuild src/index.ts --bundle --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:watch": "esbuild src/index.ts --bundle --watch --sourcemap=external --outfile=dist/esbuild/cli.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.21",
    "@types/node": "^16.3.2",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mysql2": "^2.2.5",
    "sequelize": "^6.6.5"
  }
}